extends layout

block vars
    - var title = "Player two - Videos"

block content
    h1 Videos
    .row
        - for (var i in videos) {
            .tile.col-xs-12.col-sm-4.col-md-3(id='#{videos[i].name}')
                .video-wrapper
                    span.glyphicon.glyphicon-play.action-icon
                    video(preload="none")
                        source(src="#{videos[i].stat}",type="video/mp4")
                        track(src="#{videos[i].vttSub}", kind="subtitle", srclang="en-US", label="English")
                .tile-footer.bg-16(title="#{videos[i].name}") #{videos[i].name}
                    a(href="#{videos[i].stat}")
                        i.glyphicon.glyphicon-circle-arrow-down
        -}
    
    include blocks/nav

block footer
block scripts
  script(type="text/javascript" src="/js/videos.js")